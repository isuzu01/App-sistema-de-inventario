<?xml version="1.0" encoding="utf-8"?><!--suppress NavigationFile -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/page_welcome">


    <fragment
        android:id="@+id/page_welcome"
        android:name="com.example.inventarioapp.views.welcome.WelcomeFragment"
        android:label="Bienvenida"
        tools:layout="@layout/fragment_welcome" />


    <!-- LISTADO DE PROVEEDORES -->
    <fragment
        android:id="@+id/page_proveedores"
        android:name="com.example.inventarioapp.views.proveedores.ProveedorFragment"
        android:label="fragment_proveedores"
        tools:layout="@layout/fragment_proveedor">

        <!-- Acciones -->
        <action
            android:id="@+id/action_to_form_proveedor"
            app:destination="@id/page_proveedor_form" />

    </fragment>


    <!-- AGREGAR PROVEEDOR -->
    <fragment
        android:id="@+id/page_proveedor_form"
        android:name="com.example.inventarioapp.views.proveedores.ProveedorFormFragment"
        android:label="Formulario de Proveedor"
        tools:layout="@layout/fragment_proveedor_form">

        <!-- AcciÃ³n para regresar al listado-->
        <argument
            android:name="proveedorId"
            android:defaultValue="0L"
            app:argType="long" />

    </fragment>

    <!-- LISTADO DE PRODUCTOS -->
    <fragment
        android:id="@+id/page_productos"
        android:name="com.example.inventarioapp.views.productos.ProductoFragment"
        android:label="fragment_productos"
        tools:layout="@layout/fragment_producto">

        <action
            android:id="@+id/action_to_form_producto"
            app:destination="@id/page_producto_form" />

    </fragment>

    <fragment
        android:id="@+id/page_producto_form"
        android:name="com.example.inventarioapp.views.productos.ProductoFormFragment"
        android:label="fragment_producto_form"
        tools:layout="@layout/fragment_producto_form">
        <argument
            android:name="productoId"
            android:defaultValue="0L"
            app:argType="long" />

        <action
            android:id="@+id/action_back_to_productos"
            app:destination="@id/page_productos"
            app:popUpTo="@id/page_productos"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>